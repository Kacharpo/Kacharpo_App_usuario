<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistroUsuario">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        app:srcCompat="@drawable/logo_transparent" />

    <EditText
        android:id="@+id/textVnombreRUsuario"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/border_set"
        android:hint="Nombre"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp" />

    <EditText
        android:id="@+id/textVnombreRApellido"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/border_set"
        android:hint="Apellido"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp" />

    <EditText
        android:id="@+id/textViewNumRegUsuario"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/border_set"
        android:hint="Numero"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="295dp" />

    <EditText
        android:id="@+id/textVCorreoRegUsuario"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/border_set"
        android:hint="Correo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="340dp" />

    <EditText
        android:id="@+id/editTDFechaNacRUsuario"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/border_set"
        android:ems="10"
        android:hint=" Fecha de nacimiento"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="1dp" />
    <EditText
        android:id="@+id/editTDUsuario"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/border_set"
        android:ems="10"
        android:hint="Usuario"
        android:textAlignment="center"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="1dp" />
    <EditText
        android:id="@+id/editTTextPassRegUsuario"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/border_set"
        android:ems="10"
        android:hint=" Ingrese su contraseña"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="382dp" />

    <EditText
        android:id="@+id/editTTextPassRegUsuarioConf"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/border_set"
        android:ems="10"
        android:hint=" Ingrese su contraseña de nuevo"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="447dp" />


    <RadioButton
        android:id="@+id/radioBPolPrivacRUsuario"
        android:layout_width="329dp"
        android:layout_height="30dp"
        android:buttonTint="#F44336"
        android:text="He leido y acepto las politicas de privacidad"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="50dp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="532dp" />

    <Button
        android:id="@+id/BtnAceparRegistroUsuario"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:onClick="RegistrarDataUser"
        android:text="Aceptar" />


</LinearLayout>