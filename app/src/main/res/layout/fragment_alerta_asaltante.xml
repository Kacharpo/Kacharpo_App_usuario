<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alertas.AlertaAsaltante">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_ca_asaltante"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Asaltante"
                android:textColor="#EA6A25"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_ca_calles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Entre Calle 1 y Calle 2"
                android:textColor="#000000"
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/atxt_ca_calle1_l"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF0101"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/tv_calle1">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/atxt_ca_calle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:completionThreshold="1"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:textSize="24sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/atxt_ca_calle2_l"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF0101"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/tv_calle2">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/atxt_ca_calle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:completionThreshold="1"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:textSize="24sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/txt_ca_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:hint="Descripcion"
                android:inputType="textMultiLine"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tv_ca_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Obtener Ubicacion"
                android:textColor="#000000"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ca_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_c_ubicacion"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ca_enviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_c_enviar"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>